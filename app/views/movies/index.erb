<div class="movie-index">
    <h1>Movies</h1>
    <a href="/movies/new">Add a Movie</a>
    <% @movies.each do |movie| %>
        <div class="movie-card">
            <h2><a href="/movies/<%= movie.id %>"><%= movie.title %></a></h2>
            <img src="<%= movie.image %>" alt="movie">
            <a href="/movies/<%= movie.id %>/edit">Edit</a>
            <%# end %>
        </div>
    <% end %>
</div>